{
  "name": "react-webapp-starter-kit",
  "version": "1.0.0",
  "description": "A barebones React webapp development environment, with logical commits so you can learn to make it from scratch.",
  "main": "server.js",
  "scripts": {
    "test": "mocha-webpack --webpack-config webpack.config-test.js \"test/**/*.spec.js\"",
    "test:watch": "mocha-webpack --webpack-config webpack.config-test.js --watch \"test/**/*.spec.js\"",
    "devserver": "webpack-dev-server --hot --progress --colors --host 0.0.0.0 --port 3000",
    "lint": "eslint src/* test/*",
    "lint:fix": "eslint -- --fix src/* test/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukebelliveau/react-webapp-starterkit.git"
  },
  "author": "Luke Belliveau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lukebelliveau/react-webapp-starterkit/issues"
  },
  "homepage": "https://github.com/lukebelliveau/react-webapp-starterkit#readme",
  "dependencies": {
    "express": "^4.15.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "webpack-node-externals": "^1.5.4"
  }
}
